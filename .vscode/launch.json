{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "smartStep": true,
            "trace": true,
            "skipFiles": [
                "node_modules/**"
            ]
        }
    ]
}
